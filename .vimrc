" color
colorscheme torte

" editor window
set ruler
syntax enable

" set tabs to space
set tabstop=2
set softtabstop=2
set expandtab
set shiftwidth=2
set smarttab

" numbers
set number
set numberwidth=5

" statusline
set showcmd
set laststatus=2
set statusline=%f         " Path to the file
set statusline+=%y        " Filetype of the file
